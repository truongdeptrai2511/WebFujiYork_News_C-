@model  SV19T1081026.AdminTool.Models.CommentSearchOutput
@{
    Layout = null;
    ViewBag.Title = "Quản lý bình luận";
}
<div class="row">
    <div class="col-md-12">
        Có tất cả @Model.RowCount bình luận. Bạn đang ở trang @Model.Page trên tổng số @Model.PageCount bình luận.
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Ngày tạo</th>
                <th>Nội dung bình luận</th>
                <th style="width:100px">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CreatedTime</td>
                    <td>@item.CommentContent</td>
                    <td class="text-right">
                        <a href="~/Category/Delete/@item.CommentId" class="btn btn-danger">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                        <a href="~/Category/Edit/@item.CommentId" class="btn btn-default">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-md-12 text-center">
        <ul class="pagination">
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (page == Model.Page)
                {
                    <li class="active"><a href="#">@page</a></li>
                }
                else
                {
                    <li><a href="javascripts:;" onclick="doSearch(@page)">@page</a></li>
                }
            }
        </ul>
    </div>
</div>

