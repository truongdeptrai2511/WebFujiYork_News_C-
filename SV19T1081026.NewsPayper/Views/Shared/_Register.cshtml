<div class="box-header with-border">
    <form id="formRegister" class="form-horizontal" action="~/Home/Register" method="post">

        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="UserName">Tên người dùng:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="UserName" id="UserName" placeholder="Tên người dùng">

            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="FirstName">Họ:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="Họ">

            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="LastName">Tên:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Tên">

            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="Email">Email:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Email" id="Email" placeholder="Email">

            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="Phone">Số điện thoại:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Số điện thoại">

            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="Password">Mật khẩu:</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" name="Password" id="Password" placeholder="Mật khẩu">

            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-3 text-right mt-1" for="PassConfirm">Xác nhận mật khẩu:</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" name="PassConfirm" id="PassConfirm" placeholder="Xác nhận mật khẩu">

            </div>
        </div>
        <button id="btnRegister" type="button" class="btn btn-info btn-block btn-round" style="font-family: 'Droid Serif', serif; font-size: 20px; color: #2f2f2f; line-height: normal;background-color:black; color:white">Đăng ký</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        $("#btnRegister").click(function () {
            doRegister();
        });
        $("#PassConfirm").keyup(function (e) {
            if (e.keyCode == 13) {
                doRegister();
            }
        });

    })
    function doRegister() {
        var link = $("#formRegister").prop("action");
        var data = $("#formRegister").serializeArray();
        $.ajax({
            url: link,
            type: "POST",
            data: data,
            async: false,
            error: function () {
                alert("Your data is not valid!");
            },
            success: function (data) {
                $("#register").html(data);
            }
        });
    }
</script>

